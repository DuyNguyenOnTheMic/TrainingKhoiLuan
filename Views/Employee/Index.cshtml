
@{
    ViewBag.Title = "Employee list";
}

<h2>Employee list</h2>



<a class="btn btn-success" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("AddOrEdit","Employee")')">Add New</a>

<table id="employee" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>birth_date</th>
            <th>birth_place</th>
            <th>Age</th>
            <th></th>

        </tr>
    </thead>
    
</table>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap.min.css" rel="stylesheet" />

@section scripts{


    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.2/moment.min.js"></script>
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap.min.js"></script>
    <script>
        var Popup, dataTble;
        $(document).ready(function () {
            dataTble = $("#employee").DataTable({
                "ajax": {
                    "url": "/Employee/GetData",
                    "type": "Get",
                    "datatype": "Json"
                },
                "columns": [
                    { "data": "employee_name" },
                    { "data": "birth_date" },
                    { "data": "birth_place" },
                    { "data": "age" },
                    {
                        "data": "employee_id", "render": function (data) {
                            return "<a class='btn btn-default btn-sm' style='margin-left: 5px' onclick=PopupForm('@Url.Action("AddOrEdit","Employee")/"+data+"')>Edit</a><a class='btn btn-default btn-sm' onclick=Delete("+data+")>Delete</a>"
                        }
                    },

                ],

                "language": {
                    "emptyTable": "No data found, Plese click on <b>Add Nem</b> button"
                },
                columnDefs: [
                    {
                        targets: 1,
                        render: DataTable.render.date(),
                    },
                ],

            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url).done(function (response) {
                formDiv.html(response);

                Popup = formDiv.dialog({
                    atoOpen: true,
                    resizable: false,
                    title: 'fbdbd',
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        Popup.dialog('close');
                        dataTble.ajax.reload();
                    }
                }
            });
            }
            return false;
        }

        function Delete(id) {
            if (confirm("Are yu sure?")) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Delete", "Employee")/' + id,
                    success: function (data) {
                        if (data.success) {

                            dataTble.ajax.reload();
                        }
                    }
                });
            }
        }

    </script>
}